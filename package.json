{
  "name": "react-fire-flags",
  "version": "0.0.1",
  "description": "A component library to use with https://github.com/stack-on-fire/fire-flags",
  "repository": "https://github.com/alfredosalzillo/react-fire-flags",
  "author": "alfredo.salzillo <noctisbels@gmai.com>",
  "license": "MIT",
  "private": false,
  "source": "src/index.tsx",
  "main": "dist/react-fire-flags.js",
  "module": "dist/react-fire-flags.es.js",
  "umd:main": "dist/react-fire-flags.umd.js",
  "devDependencies": {
    "@babel/preset-env": "7.5.5",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "babel-eslint": "10.0.2",
    "babel-jest": "24.8.0",
    "babel-preset-env": "1.7.0",
    "bundlesize": "0.17.2",
    "documentation": "12.0.3",
    "eslint": "5.16.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "22.7.1",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.0.8",
    "gzip-size-cli": "3.0.0",
    "jest": "24.8.0",
    "microbundle": "^0.13.3",
    "npm-run-all": "4.1.5",
    "react": "16.8.6",
    "react-app-rewired": "^2.1.8",
    "react-dom": "16.8.6",
    "react-router-dom": "5.0.1",
    "strip-json-comments-cli": "1.0.1",
    "typescript": "^4.3.5"
  },
  "peerDependencies": {
    "react": "*",
    "react-router-dom": "*"
  },
  "scripts": {
    "dev": "microbundle watch",
    "build": "microbundle",
    "docs": "documentation readme src/*.tsx -q --section API && yarn fixreadme",
    "lint": "eslint -c .eslintrc ./src --fix",
    "prepare": "rm -rf dist && yarn build",
    "test": "jest --config jest.config.js",
    "test:watch": "jest --watch",
    "test:size": "bundlesize",
    "fixreadme": "node -e 'var fs=require(\"fs\");fs.writeFileSync(\"README.md\", fs.readFileSync(\"README.md\", \"utf8\").replace(/^-   /gm, \"- \"))'",
    "release": "yarn -s prepare && git commit -am $npm_package_version && git tag $npm_package_version && git push && git push --tags && npm publish"
  }
}
